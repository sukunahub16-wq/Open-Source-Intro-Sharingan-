--Intro Sharingan 
--Open source from Sukuna 
wait(0.32)

local Sound = Instance.new("Sound", game:GetService("SoundService"));
Sound.SoundId = "rbxassetid://1592708450";
Sound:Play();
local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")
local player = Players.LocalPlayer

local gui = player:WaitForChild("PlayerGui")

local screenGui = Instance.new("ScreenGui", gui)
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false

local img = Instance.new("ImageLabel")
img.Image = "rbxassetid://73834155770081"
img.Size = UDim2.new(0, 0, 0, 0)
img.Position = UDim2.new(0.5, 0, 0.5, 0)
img.AnchorPoint = Vector2.new(0.5, 0.5)
img.BackgroundTransparency = 1
img.Rotation = 0
img.Parent = screenGui

local tweenInfo1 = TweenInfo.new(2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
local goal1 = {
 Size = UDim2.new(0, 200, 0, 200),
 Rotation = 360,
}
TweenService:Create(img, tweenInfo1, goal1):Play()

task.delay(2 + 2, function()
 local tweenInfo2 = TweenInfo.new(2, Enum.EasingStyle.Quad, Enum.EasingDirection.In)
 local goal2 = {
  Size = UDim2.new(0, 0, 0, 0),
  Rotation = 720,
  Position = UDim2.new(0.5, 0, 0.6, 0),
 }
 local tween2 = TweenService:Create(img, tweenInfo2, goal2)
 tween2:Play()
 tween2.Completed:Connect(function()
  screenGui:Destroy()
 end)
end)
